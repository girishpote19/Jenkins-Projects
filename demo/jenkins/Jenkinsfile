pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                git branch: 'First_JenkinsProj_Java',
                    url: 'https://github.com/girishpote19/Jenkins-Projects.git'
            }
        }

        stage('Test') {
            steps {
                dir('demo') {   // navigate to folder where pom.xml is
                    sh 'mvn test'
                }
            }
        }

        stage('Package') {
            steps {
                dir('demo') {
                    sh 'mvn clean package -DskipTests'
                }
            }
        }

        stage('Deploy (practice)') {
            steps {
                echo "âœ… Build successful! Next step: Dockerize and deploy."
            }
        }
    }
}
